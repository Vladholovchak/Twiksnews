<% if user_signed_in? %>
  <%= link_to('Logout', destroy_user_session_path, method: :delete, class:"btn btn-sm btn-outline-secondary") %>
  <%= image_tag current_user.avatar, size: '50x50' if current_user.avatar.attached?  %>
  <%= link_to('My info', current_user,  class:"btn btn-sm btn-outline-secondary") %>
  <% if policy(User).update? %>
  <%= link_to('Users', users_path,  class:"btn btn-sm btn-outline-secondary" ) %>
  <% end %>
  <%= link_to('My news', root_path,  class:"btn btn-sm btn-outline-secondary" ) %>
<% else %>
    <%= link_to('Login', new_user_session_path, class:"btn btn-sm btn-outline-secondary")   %>
<% end %>